---
import Layout from '../layouts/Layout.astro';
import { SplitView } from '../components/SplitView';
import { Logo } from '../components/Logo';
import '../styles/animations.css';
---

<Layout title="AI Wireframe Generator">
  <main class="min-h-screen bg-gradient-to-b from-slate-50 to-slate-100">
    <div class="max-w-8xl mx-auto px-4 py-8">
      <div class="text-center mb-12">
        <Logo />
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mt-4">
          Transform your ideas into visual designs. Describe your application flow and let AI generate professional wireframes for you.
        </p>
      </div>
      <div class="bg-white rounded-xl shadow-lg p-4 md:p-6 lg:p-8">
        <SplitView client:load />
      </div>
      <div class="text-center mt-8 text-sm text-gray-500">
        Powered by <a href="https://claude.ai" class="text-primary hover:text-primary-dark">Claude AI</a>
      </div>
    </div>
  </main>
</Layout>