---
import Layout from '../layouts/Layout.astro';
import { AppContainer } from '../components/AppContainer';
---

<Layout title="AI Wireframe Generator">
  <main class="min-h-screen bg-dark flex flex-col">
    <div class="flex-1 p-4 md:p-8 flex flex-col">
      <div class="max-w-4xl mx-auto w-full flex-1 flex flex-col">
        <div class="flex items-center justify-center gap-4 mb-6">
          <h1 class="text-4xl md:text-5xl font-bold text-white bg-gradient-to-r from-primary to-primary-hover bg-clip-text text-transparent typewriter">
            AI Wireframe Generator
          </h1>
          <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
          </svg>
        </div>
        <p class="text-lg text-gray-400 text-center mb-8 max-w-2xl mx-auto px-4">
          Transform your ideas into visual designs. Describe your application flow and let AI generate professional wireframes for you.
        </p>
        <AppContainer client:load />
        <footer class="text-center mt-6 text-sm text-gray-500">
          Powered by <span class="font-semibold text-primary">Claude AI</span>
        </footer>
      </div>
    </div>
  </main>
</Layout>